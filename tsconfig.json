{
  "compilerOptions": {
    "jsx": "preserve",

    "module": "node16",
    "moduleResolution": "node16",
    "paths": {
          "@common/*": ["./src/*"]
        },
       
            "target": "ES2020",
    "allowImportingTsExtensions":true,
    "noEmit":true,
    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "exclude": ["dist/"],
}
